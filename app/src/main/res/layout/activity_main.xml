<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBck"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="20pt"
        android:layout_marginBottom="5pt"
        android:orientation="vertical"
        android:background="@color/colorTvResult">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llTextView"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_marginBottom="5pt"
                android:padding="10dp"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/tvResult"
                android:background="@color/colorTvResult"
                android:textColor="@color/colorBtnText1"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll123C"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="1"
            android:layout_marginRight="1pt"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn1">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="2"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn2">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="3"
            android:layout_marginLeft="1pt"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn3">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="1pt"
            android:text="C"
            android:background="@drawable/c_btn_selector"
            android:textColor="@color/colorBtnText"
            android:textSize="8pt"
            android:id="@+id/btnC">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll456Sub"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="4"
            android:layout_marginRight="1pt"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn4">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="5"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn5">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="6"
            android:layout_marginLeft="1pt"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn6">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="1pt"
            android:text="+"
            android:background="@drawable/operator_btn_selector"
            android:textColor="@color/colorBtnText"
            android:textSize="8pt"
            android:id="@+id/btnAdd">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll789Mult"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="7"
            android:layout_marginRight="1pt"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn7">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="8"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn8">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="9"
            android:layout_marginLeft="1pt"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn9">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="1pt"
            android:text="-"
            android:background="@drawable/operator_btn_selector"
            android:textColor="@color/colorBtnText"
            android:textSize="8pt"
            android:id="@+id/btnSub">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll0DotEqDiv"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="0"
            android:layout_marginRight="1pt"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector1"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btn0">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="."
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/number_btn_selector1"
            android:textColor="@color/colorBtnText1"
            android:textSize="8pt"
            android:id="@+id/btnDot">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:text="/"
            android:layout_marginLeft="1pt"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/operator_btn_selector"
            android:textColor="@color/colorBtnText"
            android:textSize="8pt"
            android:id="@+id/btnDiv">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="1pt"
            android:text="*"
            android:background="@drawable/operator_btn_selector"
            android:textColor="@color/colorBtnText"
            android:textSize="8pt"
            android:id="@+id/btnMult">
        </Button>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llEq"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:padding="10pt"
            android:text="="
            android:background="@drawable/equals_btn_selector"
            android:textColor="@color/colorBtnText"
            android:textSize="8pt"
            android:id="@+id/btnEq">
        </Button>
    </LinearLayout>


</LinearLayout>